<div data-create-post-target="form" class="post-form d-none">
  <h2>Create a Post</h2>
  <%= simple_form_for [@channel, @post] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.submit "Create Post", class: "btn btn-primary" %>
  <% end %>
</div>
