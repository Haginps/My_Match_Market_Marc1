
  <div class="formstyle">
  <h2>Create a Post</h2>
  <%= simple_form_for [channel, post], html: {data:  {create_post_target: "form"}} do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :title, required: true, class: 'form-control' %>
      <%= f.input :description, required: true, class: "form-control" %>
      <%= f.input :photo, as: :file %>

    </div>


    <%= f.submit "Create Post", class: "btn btn-default" %>
  <% end %>
</div>
